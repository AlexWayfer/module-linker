{
  "manifest_version": 2,
  "name": "Module Linker",
  "description": "Point and click to browse imported modules directly from GitHub",
  "version": "1.7.2",
  "author": "Giovanni T. Parra",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "content_scripts": [{
    "matches": [
      "https://github.com/*/*"
    ],
    "js": ["vendor/jquery.js", "vendor/jquery.pjax.js", "dist/full.js"],
    "css": ["links.css"]
  }],
  "background": {
    "scripts": ["dist/background.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "permissions": [
    "https://github.com/*/*/blob/*",
    "https://pypi.python.org/pypi/*",
    "https://api.github.com/repos/*",
    "https://githublinker.herokuapp.com/q/*/*",
    "activeTab",
    "webNavigation",
    "storage"
  ]
}
