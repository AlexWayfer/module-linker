{
  "manifest_version": 2,
  "name": "GitHub Browser",
  "description": "Let's you click and go to modules inside GitHub source view",
  "version": "1.0.0",
  "author": "Giovanni T. Parra",
  "content_scripts": [{
    "matches": ["https://github.com/*/*/blob/*.py"],
    "js": ["dist/python.js"]
  }, {
    "matches": ["https://github.com/*/*/blob/*.go"],
    "js": ["dist/go.js"]
  }, {
    "matches": ["https://github.com/*/*/blob/*.js"],
    "js": ["dist/javascript.js"]
  }],
  "permissions": [
    "https://github.com/*/*/blob/*",
    "activeTab"
  ]
}
